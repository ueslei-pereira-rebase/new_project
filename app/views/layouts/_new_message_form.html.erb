<div class="input-chat">
  <%= form_with(model: [@single_room ,@message], remote: true, class: "d-flex", id: "myform" , data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } ) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
    <%= f.submit  data: { disable_with: false }, class: "btn btn-primary", value: 'Enviar', id:'enviar-msg' %>
  <% end %>

</div>